{
  "rootDir": "../../",
  "coverageReporters": [
    "json",
    "lcov",
    "text-summary"
  ],
  "collectCoverageFrom": [
    "lib/**/*.js",
    "src/**/*.js"
  ],
  "globalSetup": "<rootDir>/test/setup-global.js",
  "roots": [
    "lib",
    "src",
    "test"
  ],
  "setupFilesAfterEnv": ["<rootDir>/test/setup-test.js"],
  "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/test/build.spec.js", "<rootDir>/test/integration/", "<rootDir>/lib/dai-plugin-mcd/test/integration/"],
  "testRunner": "jest-circus/runner"
}
